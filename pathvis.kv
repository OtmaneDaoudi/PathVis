<PathVisUi>:
    orientation: 'vertical'
    Grid:
        id: grid_
    ControlPanel:
        grid: grid_
        size_hint: 1, .3

<Grid>:
    cols: 40
    rows: 20
    spacing: .5, .5

<ControlPanel>:
    canvas:
        Color: 
            rgba: 169/255,169/255,169/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        pos: 0, 0
        background_color: 102/255, 245/255, 66/255, 1
        background_normal: ''
        text: "Start"
        on_press: root.mark_start()
    Button:
        pos: 100, 0
        background_color: 0, 0, 0, 1
        background_normal: ''
        text: "Wall"
        on_press: root.mark_wall()

    Button:
        pos: 200, 0
        background_normal: ''
        background_color: 222/255, 43/255, 11/255, 1
        text: "End"
        on_press: root.mark_end()

<Cell>:
    canvas:
        Color:
            rgba: self.color_
        Rectangle:
            size: self.size
            pos: self.pos